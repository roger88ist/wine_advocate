<%= simple_form_for @wine, :html => { :multipart => true } do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a Category") %>
	<%= f.file_field :wine_img %>
	<%= f.input :name, label: "Wine Name" %>
	<%= f.input :description %>
	<%= f.input :origin %>
	<%= f.button :submit %>
<% end %>
